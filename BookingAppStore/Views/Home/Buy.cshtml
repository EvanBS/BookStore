
@{
    ViewBag.Title = "Buying book";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="buyForm">
        <h3>Форма оформления покупки</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.BookID" name="BookId" />
            <table>
                <tr>
                    <td><p>Введите свое имя </p></td>
                    <td><input class="form-control" type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введите свою фамилию</p></td>
                    <td><input class="form-control" type="text" name="Surname" /> </td>
                </tr>
                <tr>
                    <td><p>Введите адрес :</p></td>
                    <td>
                        <input class="form-control" type="text" name="Address" />
                    </td>
                </tr>
                <tr><td><input class="btn btn-primary" type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>